<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">choos6</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/jjrecipes</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>		
		<property name="show_sql">true</property>
		
		<mapping class="se.jjrecipes.entity.User"></mapping>
		<mapping class="se.jjrecipes.entity.Recipe"></mapping>
		<mapping class="se.jjrecipes.entity.Ingredient"></mapping>
		<mapping class="se.jjrecipes.entity.Favourite"></mapping>
		<mapping class="se.jjrecipes.entity.Tag"></mapping>
		<mapping class="se.jjrecipes.entity.Measuretype"></mapping>
		<mapping class="se.jjrecipes.entity.UserRole"></mapping>
	</session-factory>
	

	
</hibernate-configuration>